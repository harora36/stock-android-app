<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/xsmall_margin">

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/xnormal_margin"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Symbol"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:layout_marginRight="@dimen/xsmall_margin"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Price"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/value3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/semi_normal_text" />

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_marginLeft="@dimen/xsmall_margin"
                android:layout_width="@dimen/list_side_img_width"
                android:layout_height="@dimen/list_side_img_width"
                android:scaleType="fitCenter"
                android:src="@drawable/up" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day's Range"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_normal_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xnormal_margin"
        android:layout_marginTop="@dimen/xnormal_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="#FFCCCCCC"></View>
    </TableRow>
</TableLayout>